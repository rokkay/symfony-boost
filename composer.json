{
  "name": "rokkay/symfony-boost",
  "type": "symfony-bundle",
  "description": "Symfony Boost accelerates AI-assisted development to generate high-quality, Symfony-specific code.",
  "license": "MIT",
  "authors": [
    {
      "name": "rokkay",
      "email": "rayaleonjosecarlos@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.3",
    "symfony/config": "^7.3",
    "symfony/console": "^7.3",
    "symfony/dependency-injection": "^7.3",
    "symfony/framework-bundle": "^7.3",
    "symfony/mcp-sdk": "dev-main",
    "symfony/process": "^7.3"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1.22",
    "phpunit/phpunit": "^11.5.34",
    "symfony/phpunit-bridge": "^7.3.1"
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist"
  },
  "autoload": {
    "psr-4": {
      "Rokkay\\SymfonyBoostBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Rokkay\\SymfonyBoostBundle\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable" : true,
  "scripts": {
    "bump:minor": [
      "composer update &&  composer bump"
    ],
    "test:unit": "phpunit",
    "test": [
      "@test:unit"
    ]
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/ineersa/ai"
    }
  ]
}
